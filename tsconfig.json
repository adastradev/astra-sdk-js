{
  "compilerOptions": {
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "rootDir": "./source",
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "types": [
      "mocha",
      "node"
    ]
  },
  "exclude": [
    ".vscode",
    "node_modules",
    "./test",
    "./dist"
  ]
}
